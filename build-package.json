{
  "name": "oceansbits-build",
  "version": "1.0.0",
  "description": "Build tools para Oceansbits",
  "scripts": {
    "build": "npm run minify:js && npm run minify:css && npm run minify:html",
    "minify:js": "terser js/**/*.js --compress --mangle --output-dir dist/js --source-map",
    "minify:css": "cleancss -o dist/styles.min.css css/**/*.css",
    "minify:html": "html-minifier --input-dir . --output-dir dist --file-ext html",
    "dev": "npm run test",
    "prod": "npm run build && npm run test:coverage"
  },
  "devDependencies": {
    "terser": "^5.18.0",
    "clean-css-cli": "^5.6.0",
    "html-minifier": "^4.0.0"
  }
}
